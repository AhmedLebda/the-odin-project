<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head") %>

    <body>
        <div class="grid grid-rows-layout min-h-screen">
            <%- include('../partials/header.ejs') %>

            <main class="m-8 overflow-y-auto">
                <div class="flex flex-wrap">
                    <form
                        class="border p-4 flex flex-col gap-4 shadow-2xl max-w-screen-sm mx-auto my-8 flex-1"
                    >
                        <h1
                            class="text-4xl text-red-600 font-bold mb-4 pb-4 text-center border-b-2 border-red-500"
                        >
                            Signup:
                        </h1>
                        <div class="flex flex-col gap-2">
                            <label for="firstName" class="capitalize text-lg"
                                >First Name <span class="text-red-500">*</span>:
                            </label>
                            <input
                                required
                                type="text"
                                name="firstName"
                                id="firstName"
                                class="border p-2"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label for="lastName" class="capitalize text-lg"
                                >Last Name <span class="text-red-500">*</span>:
                            </label>
                            <input
                                required
                                type="text"
                                name="lastName"
                                id="lastName"
                                class="border p-2"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label for="email" class="capitalize text-lg"
                                >email <span class="text-red-500">*</span>:
                            </label>
                            <input
                                required
                                type="email"
                                name="email"
                                id="email"
                                class="border p-2"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label for="password" class="capitalize text-lg"
                                >password <span class="text-red-500">*</span>:
                            </label>
                            <input
                                required
                                type="password"
                                name="password"
                                id="password"
                                class="border p-2"
                            />
                        </div>
                        <div class="flex flex-col gap-2">
                            <label
                                for="confirmPassword"
                                class="capitalize text-lg"
                                >confirm password
                                <span class="text-red-500">*</span>:
                            </label>
                            <input
                                required
                                type="password"
                                name="confirmPassword"
                                id="confirmPassword"
                                class="border p-2"
                            />
                        </div>
                        <button
                            type="submit"
                            class="bg-red-600 text-lg text-white border p-2 rounded-lg w-1/2 mx-auto my-4"
                        >
                            Login
                        </button>
                    </form>
                    <ul
                        class="my-8 flex flex-col gap-4 ml-6 text-sm list-disc text-red-500"
                        id="errors"
                    ></ul>
                </div>
            </main>

            <!-- Footer -->
            <%- include("../partials/footer") %>
        </div>

        <script src="/scripts/signupForm.js"></script>
    </body>
</html>
